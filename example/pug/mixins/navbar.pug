mixin navbar(name, id, style, href)
  - var style = (typeof style === 'undefined') ? "default" : style
  - var href = (typeof style === 'undefined') ? "#" : href
  nav( role="navigation", class=["navbar", "navbar-" + style] )
    .navbar-header
      button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#" + id, aria-expanded="false", aria-controls="navbar")
        i.rif-tiles
      a.navbar-brand(href=href)= name

    .collapse.navbar-collapse( id=id )
      ul.nav.navbar-nav
        block

mixin navbarBS5(brand_items, menu_items, search_items)
  - var style = (typeof brand_items.style === 'undefined') ? "bg-light" : brand_items.style
  - var href = (typeof brand_items.href === 'undefined') ? "#" : brand_items.href
  nav(class="navbar navbar-expand-lg "+style)
    .container-fluid
      a.navbar-brand(href=href) #{brand_items.name}
      button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
          i.rif-tiles
      .collapse.navbar-collapse#navbarSupportedContent
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          each nav_item in menu_items
            - var navActive = (slug === nav_item.url) ? "active" : ""
            li.nav-item
              a(href= nav_item.url+".html", class="nav-link "+navActive) #{nav_item.name}
        if search_items
          form.d-flex(role="search")
            input.form-control.me-2(type="search", placeholder="Search", aria-label="Search")
            button.btn.btn-outline-success(type="submit") Search


mixin navbar-logo(name, id, style, href, image)
  - var style = (typeof style === 'undefined') ? "default" : style
  - var href = (typeof href === 'undefined') ? "#" : href
  nav( role="navigation", class=["navbar", "navbar-" + style] )
    .navbar-header
      button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#" + id, aria-expanded="false", aria-controls="navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href=href)
        img(alt=name, src=image)

    .collapse.navbar-collapse( id=id )
      ul.nav.navbar-nav
        block


mixin nav_item(href, active)
  li(class=active): a( href=href )
    block

mixin nav_item_dropdown(href, active)
  li(class=["dropdown", active])
    a.dropdown-toggle( href=href, data-toggle="dropdown", role="button", aria-expanded="false" )= attributes.label
      span.caret
    ul.dropdown-menu( role="menu" )
        block

mixin nav_divider
  li.divider

mixin nav_header
  li.dropdown-header
    block

